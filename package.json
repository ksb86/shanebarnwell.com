{
    "name": "shanebarnwell",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently -n 'build:dev,server' -c 'bgBlue.bold,bgGreen.bold' 'yarn build:dev' 'yarn server'",
        "build:dev": "webpack --config webpack.dev.js --watch",
        "build:prod": "webpack --config webpack.prod.js -p",
        "server": "nodemon ./dist/server",
        "prod": "concurrently 'yarn' 'yarn clean' && concurrently 'yarn build:prod' 'cp -r src/other/* dist/public/other' && cp ./favicon.ico ./dist/favicon.ico && yarn restart",
        "restart": "pm2 stop shanebarnwell.com; pm2 start --name shanebarnwell.com dist/server.js",
        "clean": "rm -rf dist/ && mkdir -p dist/public/other"
    },
    "devDependencies": {
        "babel-core": "^6.10.4",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.11.1",
        "babel-preset-stage-0": "^6.24.1",
        "concurrently": "^3.5.1",
        "css-loader": "^0.28.11",
        "extract-text-webpack-plugin": "^3.0.2",
        "less": "^3.0.1",
        "less-loader": "^4.1.0",
        "nodemon": "^1.17.3",
        "pm2": "^3.2.2",
        "uglifyjs-webpack-plugin": "^1.2.4",
        "webpack": "^3.8.1",
        "webpack-node-externals": "^1.2.0"
    },
    "dependencies": {
        "@slack/webhook": "^5.0.3",
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-decorators": "^6.24.1",
        "babel-plugin-transform-react-jsx-source": "^6.22.0",
        "babel-preset-es2015": "^6.24.1",
        "body-parser": "^1.18.3",
        "compression": "^1.7.3",
        "cors": "^2.8.4",
        "express": "^4.14.0",
        "isomorphic-fetch": "^2.2.1",
        "md5": "^2.2.1",
        "moment-timezone": "^0.5.35",
        "morgan": "^1.9.1",
        "react": "^16.2.0",
        "react-dom": "^16.2.0",
        "react-router-dom": "^4.4.0-alpha.1",
        "regenerator-runtime": "^0.13.5",
        "request": "^2.88.0",
        "serve-favicon": "^2.5.0",
        "useragent": "^2.3.0",
        "yarn": "^1.10.1"
    }
}
